<section class="text-right">
	<%= link_to "+ New Recipe!", new_recipe_path %>
</section>

<div class="row">
	<% @recipes.each do |recipe| %>
		<div class='recipe'>
			<%= link_to recipe, class: 'block' do %>
				<%# recipe.image %>
				<h2><%= recipe.name %></h2>
				<p><%= recipe.description %></p>
			<% end %>
		</div>
	<% end %>
</div>



