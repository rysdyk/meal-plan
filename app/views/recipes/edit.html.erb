<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
  <%= f.label :description %>
	<%= f.text_area :description %>
	<%# f.label :directions  # create column in db %>
	<%# f.text_area :directions %>
	<%= f.label :servings %>
	<%= f.number_field :servings %>
	<%= f.label :calories %>
	<%= f.number_field :calories %>
	<%= f.label :cost %>
	<%= f.number_field :cost %>
	
	<span>Ingredients (<%= @recipe.ingredients.count %>)</span>
		
	<%= f.fields_for :ingredients do |builder| %>
		<%= render 'ingredient_fields', f: builder %>
	<% end %>
	
	<%= link_to_add_fields "Add Ingredient", f, :ingredients %>
	
	<%= f.label :instructions %>
	<%= f.text_area :instructions %>
	
	<%= f.submit "Submit" %>
	
<% end %>