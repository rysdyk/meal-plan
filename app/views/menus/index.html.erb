<%# Add a big generic search field for recipes and prompt to create a new menu %>
<section class="text-center">	
	<h1>Menus</h1>
</section>

<section class="text-right">
	<%= link_to 'New Menu', new_menu_path %>
</section>

<section>
	<table>
	  <thead>
	    <tr>
	      <th>Total meals</th>
	      <th>Total servings</th>
	      <th>Cost</th>
	      <th>Notes</th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @menus.each do |menu| %>
	      <tr>
	        <td><%= menu.total_meals %></td>
	        <td><%= menu.total_servings %></td>
	        <td><%= number_to_currency(menu.cost) %></td>
	        <td><%= menu.notes %></td>
	        <td><%= link_to 'Show', menu %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</section>





