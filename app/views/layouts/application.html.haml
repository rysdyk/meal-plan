!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Meal Planning App"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tag

  %body{:id => "#{controller.controller_path}"}
    %nav.row
      .columns.small-12
        = link_to 'Home', root_path
        .pull-right
          - if current_user
            %span Signed in as #{current_user.name} | #{link_to "Logout", '/logout'}
          - else
            %span #{link_to 'Login', '/login'} | #{link_to 'Signup', '/signup'}
        %hr/
    = yield
